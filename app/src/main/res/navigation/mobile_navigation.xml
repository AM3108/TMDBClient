<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_movies">

    <fragment
        android:id="@+id/navigation_movies"
        android:name="com.atul.tmdbclient.presentation.movie.MovieFragment"
        android:label="@string/title_movies"
        tools:layout="@layout/fragment_movie"/>

    <fragment
        android:id="@+id/navigation_tv_shows"
        android:name="com.atul.tmdbclient.presentation.tv.TvFragment"
        android:label="@string/title_tv"
        tools:layout="@layout/fragment_tv"/>

    <fragment
        android:id="@+id/navigation_artist"
        android:name="com.atul.tmdbclient.presentation.artist.ArtistFragment"
        android:label="@string/title_artist"
        tools:layout="@layout/fragment_artist"/>
